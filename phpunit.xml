<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false"
		 backupStaticAttributes="false"
		 processIsolation="false" colors="true" bootstrap="../../autoload.php">
	<testsuites>
		<testsuite name="ApplicationTests">
			<directory>tests/unit/Application</directory>
		</testsuite>
		<testsuite name="InfrastructureTests">
			<directory>tests/unit/Infrastructure</directory>
		</testsuite>
	</testsuites>
	<filter>
		<whitelist>
			<directory>src</directory>
		</whitelist>
	</filter>
</phpunit>
